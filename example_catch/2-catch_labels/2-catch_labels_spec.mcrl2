sort
	Label = struct Throw | Return | Catch;

act
	throw_s, throw_r, throw;
	return_s, return_r, return;
	catch;
	l : Label;

proc
	Person = throw_s|l(Throw) . return_r . Person;
	Dog = throw_r . catch|l(Catch) . return_s|l(Return) . Dog;

init
	hide({
		throw, return, catch},
	allow({
		throw|l, return|l, catch|l},
	comm({
		throw_s | throw_r -> throw,
		return_s | return_r -> return},
	Person || Dog )));
	